                </Grid.ColumnDefinitions>
                <GroupBox Header="Параметры Процесса" Height="315" HorizontalAlignment="Left" Margin="6,8,0,0" Name="ParamGroupBox" VerticalAlignment="Top" Width="185" Grid.ColumnSpan="2">
