                    <d3:ChartPlotter Margin="10,0,6,108" Name="chartURPlotter">
                        <d3:Header Content="Зависимость температуры от радиуса диска" TextBlock.FontSize="20" />
                        <d3:VerticalAxisTitle Content="Температура" />
                        <d3:HorizontalAxisTitle Content="Радиус диска" />
                    </d3:ChartPlotter>
                    <Slider Height="23" HorizontalAlignment="Left" IsEnabled="False" IsSnapToTickEnabled="True" Margin="101,629,0,0" Name="chartURTimeSlider" VerticalAlignment="Top" Width="914" ValueChanged="chartUR_ValueChanged" />
                    <Button Content="Старт" Height="23" HorizontalAlignment="Left" IsEnabled="False" Margin="16,629,0,0" Name="chartURTimeStartButton" VerticalAlignment="Top" Width="75"/>
                    <Label Content="Шкала времени" Height="28" HorizontalAlignment="Left" Margin="16,599,0,0" Name="label13" VerticalAlignment="Top" />
                    <Label Content="0 c" Height="28" HorizontalAlignment="Right" Margin="0,625,-4,0" Name="chartURTimeLabel" VerticalAlignment="Top" Width="75" />
                    <Slider Height="23" HorizontalAlignment="Left" IsEnabled="False" IsSnapToTickEnabled="True" Margin="101,576,0,0" Name="chartURZSlider" VerticalAlignment="Top" Width="914" ValueChanged="chartUR_ValueChanged" />
                    <Button Content="Старт" Height="23" HorizontalAlignment="Left" IsEnabled="False" Margin="16,576,0,0" Name="chartURZStartButton" VerticalAlignment="Top" Width="75"/>
                        
                    <Label Content="Толщина диска" Height="28" HorizontalAlignment="Left" Margin="16,546,0,0" Name="label16" VerticalAlignment="Top" />
                    <Label Content="0 мм" Height="28" HorizontalAlignment="Right" Margin="0,573,-4,0" Name="chartURZLabel" VerticalAlignment="Top" Width="75" />
                </Grid>
