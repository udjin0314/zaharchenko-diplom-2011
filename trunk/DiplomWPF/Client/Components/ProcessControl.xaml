<UserControl x:Class="DiplomWPF.ProcessControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded" HorizontalAlignment="Left" VerticalAlignment="Top" Height="105" Width="155" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" ClipToBounds="True" UseLayoutRounding="True" AllowDrop="True">
    <Grid>
        <GroupBox Header="Process Name" Height="105" HorizontalAlignment="Left" Name="processGroupBox" VerticalAlignment="Top" Width="155" BorderBrush="{x:Null}" MouseLeftButtonDown="processGroupBox_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="75*" />
                </Grid.ColumnDefinitions>
                <Button Content="Выполнить" Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="setProcessButton" VerticalAlignment="Top" Width="132" IsDefault="True" Grid.ColumnSpan="2" Click="setProcessButton_Click" />
                <ProgressBar Height="25" HorizontalAlignment="Left" Margin="7,50,0,0" Name="progressBar" VerticalAlignment="Top" Width="131" Grid.ColumnSpan="2" />
                <Label Content="Параметры" Height="28" HorizontalAlignment="Left" Margin="61,27,0,0" Name="label1" VerticalAlignment="Top" Grid.ColumnSpan="2" Foreground="#FF1A1AFF" FontStyle="Italic" Cursor="Hand" MouseLeftButtonDown="label1_MouseLeftButtonDown" />
                
            </Grid>
        </GroupBox>
        <Image Margin="0,0,5,88" Name="closeButton" Stretch="Fill" Source="/DiplomWPF;component/Client/UI/close.png" Cursor="Hand" MouseLeftButtonDown="closeButton_MouseLeftButtonDown" MouseLeave="closeButton_MouseLeave" MouseEnter="closeButton_MouseEnter" Height="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="15" />
    </Grid>
</UserControl>
